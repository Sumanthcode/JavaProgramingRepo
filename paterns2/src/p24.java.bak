class p24
{
	public static void main(String[] args) 
	{
		int n=5;
		int ch=2;
		int sp=n/2;
		//char b='b';
	
		for(int i=0;i<n;i++)
		{
			for(int j=0;j<sp;j++)
			{
				System.out.print(" ");
			}
			for(int j=0;j<ch;j++)
			{
				if(j==0||j==ch-1)
				{
				System.out.print("*");
				}
				else
					System.out.print(" ");
			}
		
	       	System.out.println();
		    if(i<n/2)
			{
				sp--;
				ch=ch+2;
			}
			else
			{
				sp++;
				ch=ch-2;
			}
		     
		}
		}
	}

